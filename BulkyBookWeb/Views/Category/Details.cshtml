@model Category
@{
    ViewData["Title"] = "Details";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 style="color:Green">Category Details List</h2>
        </div>
       @*  <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Details" class="btn btn-primary">
                <i class="bi bi-x-circle"></i> &nbsp;Create New Category
            </a>
        </div> *@
    </div>
    <br />
    
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label class="form-label">Category Name:</label>
                    <span class="form-control">@Model.Name</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label class="form-label">Quantity:</label>
                    <span class="form-control">@Model.DisplayOrder</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label class="form-label">DateTime:</label>
                    <span class="form-control">@Model.CreateDatetime</span>
                </div>
            </div>
        </div>
    </div>


           

    <div class="col-6">
        <a asp-controller="Category" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-x-circle"></i> &nbsp;Back To The List
        </a>
    </div>
</div>
